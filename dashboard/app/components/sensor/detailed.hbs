    <div class="detail controller">
      <span>Controller:</span> {{@sensor.controller}}
    </div>
    <div class="detail type">
      <span>Category:</span> {{@sensor.category}} â€“ {{@sensor.category}}
    </div>
    <div class="detail controller">
